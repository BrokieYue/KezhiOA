@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        loadSelect();
        gridList();
    })
    function gridList() {

        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/OAManage/LodgingHouse/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
                { label: '主键', name: 'F_Id', hidden: true },
                { label: '宿舍编号', name: 'F_HouseCode', width: 150, align: 'left'},
                { label: '宿舍名称', name: 'F_HouseName', width: 150, align: 'left' },
                { label: '所属项目编号', name: 'F_ProjectId', width: 150, align: 'left' },
                { label: '所属项目名称', name: 'F_ProjectName', width: 200, align: 'left' },
                { label: '宿舍详细地址', name: 'F_HouseAddress', width: 300, align: 'left' },
                { label: '宿舍负责人', name: 'F_HouseManageName', width: 120, align: 'left' },
                { label: '备注', name: 'F_Description', width: 150, align: 'left' }
            ],
            pager: "#gridPager",
            sortname: 'F_Id',
            viewrecords: true,
            multiSort: false,
            rowNum: 100,
            rowList: [30, 50, 100, 200],
            //multiSort: true,
            sortable: false,
            remoteSort: false,
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_HouseCode").val(), projectCode: $("#txt_projectCode").val() },
            }).trigger('reloadGrid');
        });
    }
    function loadSelect() {
        //用户列表
        //$("#F_CreatorUserId").bindSelect({
        //    url: "../../SystemManage/User/GetUserListJson",
        //    id: "F_Id",
        //    text: "F_RealName"
        //});
        //$("#F_ProjectStatus").bindSelect({
        //    url: "/SystemManage/ItemsData/GetProjectStatusJson",
        //    id: "F_ItemName",
        //    text: "F_ItemName"
        //});
        //$("#F_ProjectType").bindSelect({
        //    url: "/SystemManage/ItemsData/GetProjectType",
        //    id: "F_Id",
        //    text: "F_ItemName"
        //});
        

    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增项目",
            url: "/OAManage/LodgingHouse/Form",
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Form",
            title: "修改项目",
            url: "/OAManage/LodgingHouse/Form?keyValue=" + keyValue,
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        $.deleteForm({
            url: "/OAManage/LodgingHouse/DeleteHouse",
            param: { keyValue: $("#gridList").jqGridRowValue().F_Id },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_import() {
        //批量导入
        $.modalOpen({
            id: "Index",
            title: "导入预览",
            url: "/OAManage/LodgingHouse/Import",
            width: "930px",
            height: "810px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
                //loadSelect();
            }
        });
    }
    function btn_export() {
        var rows = document.getElementById("gridList").rows.length;
        if (rows <= 1) {
            $.modalAlert("没有要导出的数据", "error");
            return false;
        }
        //导出日志
        var form = $("<form>");   //定义一个form表单
        form.attr('style', 'display:none');   //在form表单中添加查询参数
        form.attr('target', '');
        form.attr('id', 'formDownload');
        form.attr('method', 'post');
        var url = "/OAManage/LodgingHouse/ExcelDailyRecord?keyword=" + $("#txt_HouseCode").val() + "&projectCode=" + $("#txt_projectCode").val();
        form.attr('action', url);
        $('body').append(form);  //将表单放置在web中
        form.submit();

        $('#formDownload').remove();
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add"  class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建</a>
        </div>
        <div class="btn-group">
            <a id="NF-Import" class="btn btn-primary dropdown-text" onclick="btn_import()"><i class="fa fa-upload"></i>导入</a>
        </div>
        <div class="btn-group">
            <a id="NF-Export" class="btn btn-primary dropdown-text" onclick="btn_export()"><i class="fa fa-upload"></i>导出</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a></li>
                <li><a id="NF-delete"  onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除</a></li>
                <li class="split"></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_HouseCode" type="text" class="form-control" placeholder="宿舍编号或名称" style="width: 150px;">
                        <input id="txt_projectCode" type="text" class="form-control" placeholder="项目编号或名称" style="width: 150px;margin-left:20px">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
