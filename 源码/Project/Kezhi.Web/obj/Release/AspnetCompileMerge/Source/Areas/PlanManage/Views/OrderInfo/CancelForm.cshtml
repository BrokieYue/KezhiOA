@{
    ViewBag.Title = "取消排产";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<script>
    var keyValue = $.request("keyValue");
    var orderno = $.request("order");
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/PlanManage/OrderInfo/CancelOrder",
            param: { keyValue: keyValue, orderno: orderno, remark: $("#F_Description").val() },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>


<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">

        <div style="padding-top: 10px; margin-right: 10px;">
            <table class="form">
                <tr>
                    @*<th class="formTitle" valign="top" style="padding-top: 5px;line-height:100px">
        请输入取消排产原因:
    </th>*@
                    <td class="formValue" colspan="3">
                        请输入取消排产原因:
                    </td>
                </tr>
                <tr>
              
                <td class="formValue" colspan="3">
                    <textarea id="F_Description" name="F_Description" class="form-control" style="height: 130px;"></textarea>
                </td>
                </tr>
            </table>
        </div>
    </div>
</form>

