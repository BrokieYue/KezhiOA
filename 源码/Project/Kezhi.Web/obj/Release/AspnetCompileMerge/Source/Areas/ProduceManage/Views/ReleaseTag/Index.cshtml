                                CreateVINPrintPage(VINNo, OrderNo, VDesc, VCode, StartTime);
                                //调用直接打印方法 -yangxin
                                LODOP.PRINT();
                                clearInit();
                                $.currentWindow().$("#gridList").trigger("reloadGrid");
                                $.currentWindow().$("#gridListR").trigger("reloadGrid");
                                //showTips("写入成功！即将加载下一条数据...", 300, 3);
                                showTips();

                            }
                        })
                        clearInit();
                        document.getElementById("tipTxt").innerText = "提示信息：";
                    }

                });

            } else {
                $.modalAlert("请输入有效数据", "warning");
                return false;
                $('#txt_departmentname').focus();
            }
        }
    //返回当前时间
        function getNowFormatDate() {
            var now = new Date();

            var year = now.getFullYear();       //年
            var month = now.getMonth() + 1;     //月
            var day = now.getDate();            //日

            var hh = now.getHours();            //时
            var mm = now.getMinutes();          //分
            var ss = now.getSeconds();           //秒

            var clock = year + "-";

            if (month < 10)
                clock += "0";

            clock += month + "-";

            if (day < 10)
                clock += "0";

            clock += day + " ";

            if (hh < 10)
                clock += "0";

            clock += hh + ":";
            if (mm < 10) clock += '0';
            clock += mm + ":";

            if (ss < 10) clock += '0';
            clock += ss;
            return (clock);
        }
