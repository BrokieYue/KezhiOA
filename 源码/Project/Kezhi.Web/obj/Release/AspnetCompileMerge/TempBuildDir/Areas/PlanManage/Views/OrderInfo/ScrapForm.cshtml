@{
    ViewBag.Title = "报废工单";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<script>
    var keyValue = $.request("keyValue");
    var orderno = $.request("order");
    var vinno = $.request("vin");
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/PlanManage/OrderInfo/ScrapOrder",
            param: { keyValue: keyValue, orderno: orderno, vinno: vinno, remark: $("#F_Description").val() },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>


<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <div style="padding-top: 10px; margin-right: 10px;">
            <table class="form">
                <tr>
                    <td class="formValue" colspan="3">
                        请输入报废工单原因：
                    </td>
                </tr>
                <tr>
                    <td class="formValue" colspan="3">
                        <textarea id="F_Description" name="F_Description" class="form-control" style="height: 100px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>

