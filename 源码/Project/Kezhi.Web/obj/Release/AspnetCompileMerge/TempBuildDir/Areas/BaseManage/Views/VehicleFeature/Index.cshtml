            $.modalAlert("请选中一行特征码", "warning");
            return false;
        } else {
            $.deleteForm({
                url: "/BaseManage/VehicleFeature/DeleteForm",
                param: { keyValue: key },
                success: function () {
                    $("#gridListR").resetSelection();
                    $("#gridListR").trigger("reloadGrid");
                }
            })
        }
    }
