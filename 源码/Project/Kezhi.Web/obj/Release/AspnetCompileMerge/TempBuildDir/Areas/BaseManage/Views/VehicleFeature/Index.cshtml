            $.modalAlert("请选中一行特征码", "warning");
            return false;
        } else {
            $.modalOpen({
                id: "Form",
                title: "修改特征值",
                url: "/BaseManage/VehicleFeature/Form?keyValue=" + key + "&FeID=" + FeID + "",
                width: "350px",
                height: "220px",
                callBack: function (iframeId) {
                    top.frames[iframeId].submitForm();
                }
            });
        }
    }
    function btn_delete() {
        var key = $("#gridListR").jqGridRowValue().F_Id;
