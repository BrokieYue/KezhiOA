            $.modalAlert("请选择一条有效数据！", "warning")
            return false;
        }

    };

    function btn_edit() {
        var key = $("#gridListR").jqGridRowValue().F_Id;
        var FeID = $("#gridListR").jqGridRowValue().FeID;
