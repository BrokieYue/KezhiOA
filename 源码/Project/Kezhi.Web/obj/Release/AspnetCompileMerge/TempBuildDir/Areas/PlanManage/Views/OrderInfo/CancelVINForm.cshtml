@{
    ViewBag.Title = "取消VIN码";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<script>
    var keyValue = $.request("keyValue");
    var orderno = $.request("order");
    var vinno = $.request("vin");
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/PlanManage/OrderInfo/CancelVin",
            param: { keyValue: keyValue, orderno: orderno, vinno: vinno, remark: $("#F_Description").val() },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>


<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">

        <div style="padding-top: 10px; margin-right: 10px;">
            <table class="form">
                <tr>
                    @*<th class="formTitle" valign="top" style="padding-top: 5px;line-height:100px">
                    请输入取消排产原因:
                </th>*@
                    <td class="formValue" colspan="3">
                        请输入取消VIN码原因：
                    </td>
                </tr>
                <tr>
                    <td class="formValue" colspan="3">
                        <textarea id="F_Description" name="F_Description" class="form-control" style="height: 100px;"></textarea>
                    </td>
                </tr>
                <tr>
                    <td class="formValue" colspan="3">
                     </td>
                </tr>
                <tr>
                    <td class="formValue" colspan="3"></td>
                </tr>
                <tr>
                    <td class="formValue" colspan="3"></td>
                </tr>
                <tr>
                    <td class="formValue" colspan="3" style="font-size:10px">
                        <i style="color: red">tip：</i>所选订单已被VIN码打印机接口获取，在取消VIN码的同时请线下通知打刻机操作工人作废VIN码处理。
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>

